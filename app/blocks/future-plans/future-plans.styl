.future-plans
	margin 0 0 95px 0

	+below(2)
		margin 0 0 10px 0

	&__caption
		font block-title-text
		font-weight bold
		color main-font-color
		margin 0 0 6px 2px

	&__description
		font description-text
		color description-text-color
		line-height 1.5em
		margin 0 0 10px 0

		+below(5)
			text-align justify

	&__point
		font radio-label
		cursor pointer
		margin 0 5px 4.5px 0.5%
		text-shadow 0 1px black
		font-weight bold
		white-space nowrap

	&__answer
		display none

		+label:before
			content ''
			display inline-block
			height 26px
			width 26px
			background url("../../images/icon-sprite.png") no-repeat
			position relative
			top 5px
			left -5px

		&:checked + label:before
			background-position 0 0

		&:not(checked) + label:before
			background-position -36px 0
