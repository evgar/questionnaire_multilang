.header
	display flex
	flex-flow column nowrap
	padding-bottom 69px

	+below(2)
		padding-bottom 10px

	&__logos
		display flex
		flex-flow row wrap
		justify-content space-between

		+below(2)
			justify-content center
			margin-bottom 20px

	&__csssr-logo
		margin 62px 0 0 11.2%

		+below(2)
			margin 0
			padding 10px 0 10px 0

		+below(1)
			display none

	&__secret-logo
		margin 48px 5.3% 0 0

		+below(2)
			display none

	&__title
		display flex
		justify-content center
		margin 4px 4.2% 0 0

		+below(2)
			justify-content center
			margin-bottom 20px
